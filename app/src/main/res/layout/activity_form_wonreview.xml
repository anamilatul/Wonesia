<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE8EEF3"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingTop="100dp"
    android:paddingRight="35dp"
    tools:context=".Activity.FormWonreview">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="How was Your Triv ?"
        android:textColor="#1A80D1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Triv :"
            android:textColor="#1A80D1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Name of your triv"
            android:inputType="textPersonName"
            android:textColor="#1A80D1"
            android:textColorHint="#93ADC1"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review : "
        android:textColor="#1A80D1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edthistoryWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Review of your triv"
        android:inputType="textPersonName"
        android:textColor="#1A80D1"
        android:textColorHint="#93ADC1"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality Service"
            android:textColor="#1A80D1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Rate/10"
            android:inputType="textPersonName"
            android:textColor="#1A80D1"
            android:textColorHint="#93ADC1"
            android:textSize="17sp" />

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1A80D1"
        android:onClick="saveTriv"
        android:text="Post My Review"
        android:textSize="16sp"
        app:cornerRadius="10dp" />

</LinearLayout>