<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE8EEF3"
    android:orientation="vertical"
    tools:context=".Activity.IntroWonesia">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/wonesia_bg" />

    <TextView
        android:id="@+id/txtWonesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif"
        android:text="Wonesia"
        android:textAllCaps="false"
        android:textColor="#1A80D1"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:text="Find the interesting you want here"
        android:textColor="#1A80D1"
        android:textSize="17sp" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:backgroundTint="#1A80D1"
        android:onClick="btnStart"
        android:text="Get Started"
        android:textSize="17sp"
        app:cornerRadius="20dp" />


</LinearLayout>